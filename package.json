{
  "name": "flavor-table",
  "version": "3.0.0",
  "description": "A modern recipe discovery application with user authentication that allows users to search for recipes based on ingredients using the Spoonacular API and save favorites to a PostgreSQL database.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "psql $DATABASE_URL -f database_migration.sql",
    "seed": "node scripts/seed.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "recipe",
    "food",
    "cooking",
    "spoonacular",
    "ingredients",
    "nodejs",
    "express",
    "authentication",
    "jwt",
    "postgresql",
    "crud",
    "api"
  ],
  "author": "Ghassan Omar",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghassan-Omar/Flavor-Table.git"
  },
  "bugs": {
    "url": "https://github.com/Ghassan-Omar/Flavor-Table/issues"
  },
  "homepage": "https://github.com/Ghassan-Omar/Flavor-Table#readme"
}
